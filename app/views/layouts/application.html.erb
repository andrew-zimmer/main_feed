              <div class="sb-sidenav-menu-heading"> <%= dashboard_first_option %> </div>

                 <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUsers" aria-expanded="false" aria-controls="collapseUsers">
